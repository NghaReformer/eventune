---
/**
 * Card Component
 * Content container with optional hover effects and variants
 */

import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  variant?: 'default' | 'elevated' | 'bordered' | 'interactive';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
}

const {
  variant = 'default',
  padding = 'md',
  href,
  class: className = '',
  ...rest
} = Astro.props;

const baseStyles = 'rounded-xl bg-primary-cardBlack';

const variants = {
  default: '',
  elevated: 'shadow-card',
  bordered: 'border border-text-muted',
  interactive: 'hover:bg-primary-hoverBlack hover:shadow-card-hover transition-all duration-300 cursor-pointer',
};

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = [
  baseStyles,
  variants[variant],
  paddings[padding],
  href ? 'block' : '',
  className,
].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes} {...rest}>
    <slot />
  </a>
) : (
  <div class={classes} {...rest}>
    <slot />
  </div>
)}

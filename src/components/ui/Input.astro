---
/**
 * Input Component
 * Text, email, password, tel, textarea with validation states
 */

interface Props {
  type?: 'text' | 'email' | 'password' | 'tel' | 'number' | 'url' | 'search';
  name: string;
  label?: string;
  placeholder?: string;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  readonly?: boolean;
  error?: string;
  hint?: string;
  autocomplete?: string;
  pattern?: string;
  minlength?: number;
  maxlength?: number;
  min?: number;
  max?: number;
  class?: string;
  id?: string;
}

const {
  type = 'text',
  name,
  label,
  placeholder,
  value = '',
  required = false,
  disabled = false,
  readonly = false,
  error,
  hint,
  autocomplete,
  pattern,
  minlength,
  maxlength,
  min,
  max,
  class: className = '',
  id = name,
} = Astro.props;

const inputStyles = `
  w-full px-4 py-3
  bg-primary-cardBlack text-text-primary
  border rounded-lg
  placeholder:text-text-muted
  focus:outline-none focus:ring-2 focus:ring-accent-gold focus:border-transparent
  disabled:opacity-50 disabled:cursor-not-allowed
  transition-colors duration-200
  ${error ? 'border-status-error' : 'border-text-muted hover:border-text-secondary'}
  ${className}
`.trim();
---

<div class="space-y-1.5">
  {label && (
    <label for={id} class="block text-sm font-medium text-text-primary">
      {label}
      {required && <span class="text-status-error ml-1">*</span>}
    </label>
  )}

  <input
    type={type}
    id={id}
    name={name}
    value={value}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    readonly={readonly}
    autocomplete={autocomplete}
    pattern={pattern}
    minlength={minlength}
    maxlength={maxlength}
    min={min}
    max={max}
    class={inputStyles}
    aria-invalid={error ? 'true' : 'false'}
    aria-describedby={error ? `${id}-error` : hint ? `${id}-hint` : undefined}
  />

  {error && (
    <p id={`${id}-error`} class="text-sm text-status-error flex items-center gap-1">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
      {error}
    </p>
  )}

  {hint && !error && (
    <p id={`${id}-hint`} class="text-sm text-text-muted">
      {hint}
    </p>
  )}
</div>

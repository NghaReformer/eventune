---
/**
 * Button Component
 * Primary, secondary, ghost, and outline variants
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline' | 'danger';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  href?: string;
  disabled?: boolean;
  loading?: boolean;
  fullWidth?: boolean;
  class?: string;
  id?: string;
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  href,
  disabled = false,
  loading = false,
  fullWidth = false,
  class: className = '',
  id,
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-medium rounded-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-black disabled:opacity-50 disabled:cursor-not-allowed';

const variants = {
  primary: 'bg-accent-gold text-primary-black hover:bg-accent-goldHover focus:ring-accent-gold',
  secondary: 'bg-primary-cardBlack text-text-primary border border-text-muted hover:bg-primary-hoverBlack focus:ring-text-muted',
  ghost: 'bg-transparent text-text-primary hover:bg-primary-hoverBlack focus:ring-text-muted',
  outline: 'bg-transparent text-accent-gold border border-accent-gold hover:bg-accent-gold hover:text-primary-black focus:ring-accent-gold',
  danger: 'bg-status-error text-white hover:bg-red-600 focus:ring-status-error',
};

const sizes = {
  sm: 'px-3 py-1.5 text-sm gap-1.5',
  md: 'px-5 py-2.5 text-base gap-2',
  lg: 'px-7 py-3.5 text-lg gap-2.5',
};

const classes = [
  baseStyles,
  variants[variant],
  sizes[size],
  fullWidth ? 'w-full' : '',
  className,
].filter(Boolean).join(' ');

const Tag = href ? 'a' : 'button';
---

{href ? (
  <a
    href={disabled ? undefined : href}
    class={classes}
    id={id}
    aria-disabled={disabled}
  >
    {loading && (
      <svg class="animate-spin -ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    )}
    <slot />
  </a>
) : (
  <button
    type={type}
    class={classes}
    id={id}
    disabled={disabled || loading}
  >
    {loading && (
      <svg class="animate-spin -ml-1 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    )}
    <slot />
  </button>
)}

---
/**
 * Footer Component
 * Site footer with links, social, and copyright
 */

import { brandConfig, siteConfig } from '../../config';
import { getSiteSettings } from '../../services/admin.service';

const currentYear = new Date().getFullYear();

// Fetch settings for dynamic social links
const settings = await getSiteSettings();

const quickLinks = [
  { href: '/services', label: 'Services' },
  { href: '/samples', label: 'Samples' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const occasionLinks = [
  { href: '/order/wedding', label: 'Wedding Songs' },
  { href: '/order/birthday', label: 'Birthday Songs' },
  { href: '/order/anniversary', label: 'Anniversary Songs' },
  { href: '/order/graduation', label: 'Graduation Songs' },
];

const legalLinks = [
  { href: '/legal/privacy-policy', label: 'Privacy Policy' },
  { href: '/legal/terms', label: 'Terms of Service' },
  { href: '/legal/refunds', label: 'Refund Policy' },
];

// Use database settings with fallbacks to config
const socialLinks = [
  { href: settings.social_instagram || siteConfig.social.instagram, label: 'Instagram', icon: 'instagram' },
  { href: settings.social_tiktok || siteConfig.social.tiktok, label: 'TikTok', icon: 'tiktok' },
  { href: settings.social_youtube || siteConfig.social.youtube, label: 'YouTube', icon: 'youtube' },
  { href: settings.social_twitter || siteConfig.social.twitter, label: 'X (Twitter)', icon: 'twitter' },
  { href: settings.social_facebook || siteConfig.social.facebook, label: 'Facebook', icon: 'facebook' },
].filter(link => link.href && link.href !== '#');
---

<footer class="bg-primary-cardBlack border-t border-text-muted/20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-block">
          <span class="font-heading text-xl font-bold text-accent-gold">
            {brandConfig.name}
          </span>
        </a>
        <p class="mt-4 text-text-secondary text-sm max-w-xs">
          {brandConfig.tagline}
        </p>
        <p class="mt-4 text-text-muted text-sm">
          Creating personalized songs for life's special moments.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-heading font-semibold text-text-primary mb-4">
          Quick Links
        </h4>
        <ul class="space-y-2.5">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-text-secondary hover:text-accent-gold transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Occasions -->
      <div>
        <h4 class="font-heading font-semibold text-text-primary mb-4">
          Occasions
        </h4>
        <ul class="space-y-2.5">
          {occasionLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-text-secondary hover:text-accent-gold transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="font-heading font-semibold text-text-primary mb-4">
          Legal
        </h4>
        <ul class="space-y-2.5">
          {legalLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-text-secondary hover:text-accent-gold transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-text-muted/20">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <!-- Copyright -->
        <p class="text-text-muted text-sm order-2 md:order-1">
          &copy; {currentYear} {siteConfig.legal.companyName}. All rights reserved.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-4 order-1 md:order-2">
          {socialLinks.filter(link => link.href).map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-text-muted hover:text-accent-gold transition-colors"
              aria-label={link.label}
            >
              {link.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {link.icon === 'tiktok' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                </svg>
              )}
              {link.icon === 'youtube' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              )}
              {link.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
              {link.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>

---
/**
 * Profile Settings Page
 * Edit profile, change password, notification preferences, delete account
 *
 * Security: Uses session from layout, CSRF protection on all forms
 */
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import type { SessionData } from '../../lib/auth/session';

// Session is set by middleware - if we reach here, user is authenticated
const session = Astro.locals.session as SessionData;
const csrfToken = Astro.locals.csrfToken as string;
const user = session?.user;
const profile = session?.profile;

const notifications = profile?.notification_preferences || { email: true, sms: false };
---

<DashboardLayout title="Profile Settings" activeNav="profile">
  <div class="profile-page">
    <!-- Profile Information -->
    <section class="settings-card">
      <div class="card-header">
        <div class="header-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <h2 class="card-title">Profile Information</h2>
          <p class="card-subtitle">Update your personal details</p>
        </div>
      </div>

      <form id="profile-form" class="form-section" method="POST" action="/api/profile/update">
        <input type="hidden" name="csrf_token" value={csrfToken} />
        <div class="form-grid">
          <div class="form-group">
            <label for="full_name" class="form-label">Full Name</label>
            <input
              type="text"
              id="full_name"
              name="full_name"
              value={profile?.full_name || ''}
              class="form-input"
              placeholder="Enter your full name"
            />
          </div>
          <div class="form-group">
            <label for="email" class="form-label">Email Address</label>
            <input
              type="email"
              id="email"
              name="email"
              value={user?.email || ''}
              class="form-input disabled"
              placeholder="Enter your email"
              disabled
            />
            <p class="form-hint">Contact support to change your email</p>
          </div>
        </div>

        <div class="form-grid">
          <div class="form-group">
            <label for="phone" class="form-label">Phone Number</label>
            <div class="phone-input">
              <select id="phone_country_code" name="phone_country_code" class="form-select phone-code">
                <option value="+1" selected={profile?.phone_country_code === '+1'}>+1</option>
                <option value="+237" selected={profile?.phone_country_code === '+237'}>+237</option>
                <option value="+44" selected={profile?.phone_country_code === '+44'}>+44</option>
                <option value="+33" selected={profile?.phone_country_code === '+33'}>+33</option>
              </select>
              <input
                type="tel"
                id="phone"
                name="phone"
                value={profile?.phone || ''}
                class="form-input phone-number"
                placeholder="Phone number"
              />
            </div>
          </div>
          <div class="form-group">
            <label for="language" class="form-label">Preferred Language</label>
            <select id="language" name="preferred_language" class="form-select">
              <option value="en" selected={profile?.preferred_language === 'en'}>English</option>
              <option value="fr" selected={profile?.preferred_language === 'fr'}>Francais</option>
            </select>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="save-btn" id="profile-save-btn">
            <span class="btn-text">Save Changes</span>
            <span class="btn-loading hidden">
              <svg class="spinner" width="18" height="18" fill="none" viewBox="0 0 24 24">
                <circle class="spinner-track" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="spinner-fill" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </span>
          </button>
        </div>
      </form>
    </section>

    <!-- Change Password -->
    <section class="settings-card">
      <div class="card-header">
        <div class="header-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <div>
          <h2 class="card-title">Change Password</h2>
          <p class="card-subtitle">Update your password to keep your account secure</p>
        </div>
      </div>

      <form id="password-form" class="form-section" method="POST" action="/api/profile/password">
        <input type="hidden" name="csrf_token" value={csrfToken} />
        <div class="form-group">
          <label for="current_password" class="form-label">Current Password</label>
          <div class="password-wrapper">
            <input
              type="password"
              id="current_password"
              name="current_password"
              class="form-input"
              placeholder="Enter current password"
            />
            <button type="button" class="password-toggle" data-target="current_password">
              <svg class="eye-open" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <svg class="eye-closed hidden" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
              </svg>
            </button>
          </div>
        </div>

        <div class="form-grid">
          <div class="form-group">
            <label for="new_password" class="form-label">New Password</label>
            <div class="password-wrapper">
              <input
                type="password"
                id="new_password"
                name="new_password"
                class="form-input"
                placeholder="Enter new password"
                minlength="8"
              />
              <button type="button" class="password-toggle" data-target="new_password">
                <svg class="eye-open" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <svg class="eye-closed hidden" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
              </button>
            </div>
            <div id="password-strength" class="strength-meter">
              <div class="strength-bar"></div>
            </div>
          </div>
          <div class="form-group">
            <label for="confirm_password" class="form-label">Confirm New Password</label>
            <div class="password-wrapper">
              <input
                type="password"
                id="confirm_password"
                name="confirm_password"
                class="form-input"
                placeholder="Confirm new password"
              />
              <button type="button" class="password-toggle" data-target="confirm_password">
                <svg class="eye-open" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <svg class="eye-closed hidden" width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="save-btn">
            Update Password
          </button>
        </div>
      </form>
    </section>

    <!-- Notification Preferences -->
    <section class="settings-card">
      <div class="card-header">
        <div class="header-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
        <div>
          <h2 class="card-title">Notifications</h2>
          <p class="card-subtitle">Choose how you want to receive updates</p>
        </div>
      </div>

      <form id="notifications-form" class="form-section" method="POST" action="/api/profile/notifications">
        <input type="hidden" name="csrf_token" value={csrfToken} />
        <div class="toggle-list">
          <div class="toggle-item">
            <div class="toggle-info">
              <span class="toggle-label">Email Notifications</span>
              <span class="toggle-desc">Receive order updates and announcements via email</span>
            </div>
            <label class="toggle">
              <input
                type="checkbox"
                name="email_notifications"
                checked={notifications.email}
              />
              <span class="toggle-slider"></span>
            </label>
          </div>

          <div class="toggle-item">
            <div class="toggle-info">
              <span class="toggle-label">SMS Notifications</span>
              <span class="toggle-desc">Receive urgent updates via text message</span>
            </div>
            <label class="toggle">
              <input
                type="checkbox"
                name="sms_notifications"
                checked={notifications.sms}
              />
              <span class="toggle-slider"></span>
            </label>
          </div>

          <div class="toggle-item">
            <div class="toggle-info">
              <span class="toggle-label">Marketing Emails</span>
              <span class="toggle-desc">Receive special offers and promotions</span>
            </div>
            <label class="toggle">
              <input
                type="checkbox"
                name="marketing_consent"
                checked={profile?.marketing_consent}
              />
              <span class="toggle-slider"></span>
            </label>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="save-btn">
            Save Preferences
          </button>
        </div>
      </form>
    </section>

    <!-- Danger Zone -->
    <section class="settings-card danger-card">
      <div class="card-header">
        <div class="header-icon danger-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div>
          <h2 class="card-title danger-title">Danger Zone</h2>
          <p class="card-subtitle">Irreversible actions</p>
        </div>
      </div>

      <div class="danger-content">
        <p class="danger-desc">
          Once you delete your account, there is no going back. All your data, including order history
          and saved preferences, will be permanently removed.
        </p>
        <button type="button" id="delete-account-btn" class="delete-btn">
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete Account
        </button>
      </div>
    </section>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="delete-modal" class="modal hidden">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
      <div class="modal-icon">
        <svg width="40" height="40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h3 class="modal-title">Delete Account?</h3>
      <p class="modal-desc">
        This action cannot be undone. All your data will be permanently deleted.
      </p>
      <div class="form-group">
        <label for="delete-confirm" class="form-label">
          Type <span class="red-text">DELETE</span> to confirm
        </label>
        <input
          type="text"
          id="delete-confirm"
          class="form-input confirm-input"
          placeholder="DELETE"
        />
      </div>
      <div class="modal-actions">
        <button type="button" id="cancel-delete" class="cancel-btn">
          Cancel
        </button>
        <button type="button" id="confirm-delete" class="confirm-delete-btn" disabled>
          Delete Forever
        </button>
      </div>
    </div>
  </div>
</DashboardLayout>

<style>
  :root {
    --studio-black: #0A0A0A;
    --studio-card: #141414;
    --studio-cream: #F5F5F5;
    --gold: #D4AF37;
    --gold-dark: #B8962E;
  }

  .profile-page {
    max-width: 48rem;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Settings Card */
  .settings-card {
    background: var(--studio-card);
    border: 1px solid rgba(212, 175, 55, 0.1);
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .danger-card {
    border-color: rgba(239, 68, 68, 0.2);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(212, 175, 55, 0.1);
  }

  .header-icon {
    width: 3rem;
    height: 3rem;
    border-radius: 0.5rem;
    background: rgba(212, 175, 55, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gold);
    flex-shrink: 0;
  }

  .danger-icon {
    background: rgba(239, 68, 68, 0.1);
    color: #f87171;
  }

  .card-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    color: var(--studio-cream);
    margin: 0 0 0.25rem 0;
  }

  .danger-title {
    color: #f87171;
  }

  .card-subtitle {
    font-size: 0.8125rem;
    color: rgba(245, 245, 245, 0.5);
    margin: 0;
  }

  /* Form Styles */
  .form-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .form-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-size: 0.8125rem;
    font-weight: 500;
    color: rgba(245, 245, 245, 0.7);
  }

  .form-input {
    width: 100%;
    background: var(--studio-black);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    color: var(--studio-cream);
    font-size: 0.875rem;
    transition: border-color 0.2s;
  }

  .form-input::placeholder {
    color: rgba(245, 245, 245, 0.3);
  }

  .form-input:focus {
    outline: none;
    border-color: rgba(212, 175, 55, 0.5);
  }

  .form-input.disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .form-hint {
    font-size: 0.75rem;
    color: rgba(245, 245, 245, 0.4);
    margin: 0;
  }

  .form-select {
    width: 100%;
    background: var(--studio-black);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 0.5rem;
    padding: 0.75rem 2.5rem 0.75rem 1rem;
    color: var(--studio-cream);
    font-size: 0.875rem;
    cursor: pointer;
    appearance: none;
    transition: border-color 0.2s;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='%23D4AF37'%3e%3cpath stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M19 9l-7 7-7-7'%3e%3c/path%3e%3c/svg%3e");
    background-position: right 0.75rem center;
    background-repeat: no-repeat;
    background-size: 1rem;
  }

  .form-select:focus {
    outline: none;
    border-color: rgba(212, 175, 55, 0.5);
  }

  .form-select option {
    background: var(--studio-card);
    color: var(--studio-cream);
  }

  .phone-input {
    display: flex;
    gap: 0.5rem;
  }

  .phone-code {
    width: 5.5rem;
    flex-shrink: 0;
  }

  .phone-number {
    flex: 1;
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
  }

  /* Password Field */
  .password-wrapper {
    position: relative;
  }

  .password-wrapper .form-input {
    padding-right: 3rem;
  }

  .password-toggle {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: rgba(245, 245, 245, 0.5);
    cursor: pointer;
    padding: 0;
    transition: color 0.2s;
  }

  .password-toggle:hover {
    color: var(--gold);
  }

  .hidden {
    display: none;
  }

  /* Strength Meter */
  .strength-meter {
    height: 0.25rem;
    background: rgba(245, 245, 245, 0.1);
    border-radius: 0.125rem;
    overflow: hidden;
    margin-top: 0.5rem;
  }

  .strength-bar {
    height: 100%;
    width: 0;
    border-radius: 0.125rem;
    transition: all 0.3s ease;
    background: #ef4444;
  }

  .strength-bar.weak {
    width: 25%;
    background: #ef4444;
  }

  .strength-bar.fair {
    width: 50%;
    background: #f97316;
  }

  .strength-bar.good {
    width: 75%;
    background: #eab308;
  }

  .strength-bar.strong {
    width: 100%;
    background: #22c55e;
  }

  /* Save Button */
  .save-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
    color: var(--studio-black);
    font-weight: 600;
    font-size: 0.875rem;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .save-btn:hover {
    box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
  }

  .save-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .spinner {
    animation: spin 1s linear infinite;
  }

  .spinner-track {
    opacity: 0.25;
  }

  .spinner-fill {
    opacity: 0.75;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Toggle Switches */
  .toggle-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .toggle-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background: rgba(10, 10, 10, 0.5);
    border-radius: 0.5rem;
  }

  .toggle-info {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .toggle-label {
    font-weight: 500;
    color: var(--studio-cream);
    font-size: 0.875rem;
  }

  .toggle-desc {
    font-size: 0.75rem;
    color: rgba(245, 245, 245, 0.5);
  }

  .toggle {
    position: relative;
    display: inline-block;
    width: 3rem;
    height: 1.5rem;
    flex-shrink: 0;
  }

  .toggle input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .toggle-slider {
    position: absolute;
    cursor: pointer;
    inset: 0;
    background: rgba(245, 245, 245, 0.2);
    border-radius: 9999px;
    transition: background 0.2s;
  }

  .toggle-slider::before {
    content: "";
    position: absolute;
    height: 1.25rem;

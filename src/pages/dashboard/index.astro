  .emerald-bar { background: linear-gradient(90deg, #10B981, #34D399); }

  /* Orders Section */
  .orders-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .section-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #F5F5F5;
    margin: 0;
  }

  .view-all-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: rgba(212, 175, 55, 0.7);
    text-decoration: none;
    transition: color 0.2s;
  }


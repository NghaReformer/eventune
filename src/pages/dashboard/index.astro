---
/**
 * Customer Dashboard - Main Overview
 * Professional luxury recording studio aesthetic
 *
 * Security: Uses session from layout, server-side data fetching
 */
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { getServerClient } from '../../lib/supabase/server';
import { getFirstName, type SessionData } from '../../lib/auth/session';

// Session will be set by DashboardLayout after validation
const session = Astro.locals.session as SessionData | undefined;
const user = session?.user;
const profile = session?.profile;
const firstName = getFirstName(profile);

// Fetch data using server client
const supabase = getServerClient();
let orders: any[] = [];
let stats = { total: 0, pending: 0, inProgress: 0, completed: 0 };
let fetchError: string | null = null;

try {
  const { data: ordersData, error } = await supabase
    .from('orders')
    .select('*')
    .eq('customer_id', user?.id)
    .order('created_at', { ascending: false })
    .limit(100);

  if (error) {
    console.error('Error fetching orders:', error);
    fetchError = 'Unable to load orders. Please refresh the page.';
  } else {
    orders = ordersData || [];
    stats.total = orders.length;
    stats.pending = orders.filter(o =>
      o.status === 'pending' || o.status === 'payment_pending'
    ).length;
    stats.inProgress = orders.filter(o =>
      ['in_progress', 'composing', 'recording', 'mixing', 'review'].includes(o.status)
    ).length;
    stats.completed = orders.filter(o =>
      o.status === 'completed' || o.status === 'delivered'
    ).length;
  }
} catch (err) {
  console.error('Dashboard data fetch error:', err);
  fetchError = 'Something went wrong. Please try again.';
}

// Status styling with inline color values
const statusStyles: Record<string, { bg: string; color: string; label: string }> = {
  pending: { bg: 'rgba(245, 158, 11, 0.15)', color: '#FBBF24', label: 'Pending' },
  payment_pending: { bg: 'rgba(245, 158, 11, 0.15)', color: '#FBBF24', label: 'Awaiting Payment' },
  in_progress: { bg: 'rgba(14, 165, 233, 0.15)', color: '#38BDF8', label: 'In Progress' },
  composing: { bg: 'rgba(139, 92, 246, 0.15)', color: '#A78BFA', label: 'Composing' },
  recording: { bg: 'rgba(244, 63, 94, 0.15)', color: '#FB7185', label: 'Recording' },
  mixing: { bg: 'rgba(99, 102, 241, 0.15)', color: '#818CF8', label: 'Mixing' },
  review: { bg: 'rgba(6, 182, 212, 0.15)', color: '#22D3EE', label: 'In Review' },
  completed: { bg: 'rgba(16, 185, 129, 0.15)', color: '#34D399', label: 'Completed' },
  delivered: { bg: 'rgba(212, 175, 55, 0.2)', color: '#D4AF37', label: 'Delivered' },
};

function getStatusStyle(status: string) {
  return statusStyles[status] || statusStyles.pending;
}

function formatDate(date: string) {
  return new Date(date).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
}

function formatCurrency(amount: number, currency: string) {
  if (currency === 'XAF') {
    return `${amount.toLocaleString()} XAF`;
  }
  return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(amount);
}

function getTimeOfDay() {
  const hour = new Date().getHours();
  if (hour < 12) return 'morning';
  if (hour < 17) return 'afternoon';
  return 'evening';
}

const greeting = getTimeOfDay();
const recentOrders = orders.slice(0, 5);
---

<DashboardLayout title="Dashboard" activeNav="dashboard">
  <div class="dashboard-page">
    <!-- Welcome Section -->
    <div class="welcome-section">
      <div class="welcome-text">
        <span class="greeting-label">Good {greeting}</span>
        <h2 class="welcome-heading">
          Welcome back, <span class="gold-text">{firstName}</span>
        </h2>
        <p class="welcome-sub">
          {stats.total === 0
            ? "Your musical journey begins here."
            : stats.inProgress > 0
              ? `${stats.inProgress} song${stats.inProgress !== 1 ? 's' : ''} in production`
              : "All caught up. Ready for something new?"}
        </p>
      </div>
      <a href="/services" class="cta-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        New Song
      </a>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <!-- Total -->
      <div class="stat-card">
        <div class="stat-icon" style="background: rgba(212, 175, 55, 0.1);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#D4AF37" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 18V5l12-2v13"></path>
            <circle cx="6" cy="18" r="3"></circle>
            <circle cx="18" cy="16" r="3"></circle>
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">Total Orders</span>
          <span class="stat-value">{stats.total}</span>
        </div>
        <div class="stat-bar">
          <div class="stat-bar-fill gold-bar" style="width: 100%;"></div>
        </div>
      </div>

      <!-- Pending -->
      <div class="stat-card">
        <div class="stat-icon" style="background: rgba(245, 158, 11, 0.1);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#FBBF24" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">Pending</span>
          <span class="stat-value amber-text">{stats.pending}</span>
        </div>
        <div class="stat-bar">
          <div class="stat-bar-fill amber-bar" style={`width: ${stats.total > 0 ? (stats.pending / stats.total) * 100 : 0}%;`}></div>
        </div>
      </div>

      <!-- In Progress -->
      <div class="stat-card">
        <div class="stat-icon" style="background: rgba(14, 165, 233, 0.1);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#38BDF8" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polygon points="10 8 16 12 10 16 10 8"></polygon>
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">In Studio</span>
          <span class="stat-value sky-text">{stats.inProgress}</span>
        </div>
        <div class="stat-bar">
          <div class="stat-bar-fill sky-bar" style={`width: ${stats.total > 0 ? (stats.inProgress / stats.total) * 100 : 0}%;`}></div>
        </div>
      </div>

      <!-- Completed -->
      <div class="stat-card">
        <div class="stat-icon" style="background: rgba(16, 185, 129, 0.1);">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#34D399" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        </div>
        <div class="stat-content">
          <span class="stat-label">Delivered</span>
          <span class="stat-value emerald-text">{stats.completed}</span>
        </div>
        <div class="stat-bar">
          <div class="stat-bar-fill emerald-bar" style={`width: ${stats.total > 0 ? (stats.completed / stats.total) * 100 : 0}%;`}></div>
        </div>
      </div>
    </div>

    <!-- Recent Orders Section -->
    <div class="orders-section">
      <div class="section-header">
        <h3 class="section-title">Recent Orders</h3>
        {orders.length > 5 && (
          <a href="/dashboard/orders" class="view-all-link">
            View all
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        )}
      </div>

      {orders.length === 0 ? (
        <div class="empty-state">
          <div class="empty-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#D4AF37" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 18V5l12-2v13"></path>
              <circle cx="6" cy="18" r="3"></circle>
              <circle cx="18" cy="16" r="3"></circle>
            </svg>
          </div>
          <h4 class="empty-title">Your Studio Awaits</h4>
          <p class="empty-desc">Commission your first personalized song and turn your story into music.</p>
          <a href="/services" class="cta-btn">
            Explore Services
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      ) : (
        <div class="orders-list">
          {recentOrders.map((order) => {
            const style = getStatusStyle(order.status);
            return (
              <a href={`/dashboard/orders/${order.id}`} class="order-row">
                <div class="order-info">
                  <div class="order-header">
                    <span class="order-number">{order.order_number}</span>
                    <span class="status-badge" style={`background: ${style.bg}; color: ${style.color};`}>
                      <span class="status-dot" style={`background: ${style.color};`}></span>
                      {style.label}
                    </span>
                  </div>
                  <div class="order-title">
                    {order.occasion_slug?.replace(/-/g, ' ').replace(/\b\w/g, (l: string) => l.toUpperCase())}
                  </div>
                  <div class="order-package">
                    {order.package_slug?.replace(/-/g, ' ').replace(/\b\w/g, (l: string) => l.toUpperCase())} Package
                  </div>
                </div>
                <div class="order-meta">
                  <div class="order-amount">{formatCurrency(order.amount_expected, order.currency)}</div>
                  <div class="order-date">{formatDate(order.created_at)}</div>
                </div>
                <div class="order-arrow">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 18 15 12 9 6"></polyline>
                  </svg>
                </div>
              </a>
            );
          })}
        </div>
      )}
    </div>

    {fetchError && (
      <div class="error-banner">{fetchError}</div>
    )}
  </div>
</DashboardLayout>

<style>
  .dashboard-page {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Welcome Section */
  .welcome-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(212, 175, 55, 0.1);
  }

  @media (min-width: 640px) {
    .welcome-section {
      flex-direction: row;
      align-items: flex-end;
      justify-content: space-between;
    }
  }

  .welcome-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .greeting-label {
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(212, 175, 55, 0.7);
  }

  .welcome-heading {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #F5F5F5;
    margin: 0;
  }

  @media (min-width: 640px) {
    .welcome-heading {
      font-size: 1.875rem;
    }
  }

  .gold-text {
    color: #D4AF37;
  }

  .welcome-sub {
    font-size: 0.875rem;
    color: rgba(245, 245, 245, 0.5);
    margin: 0.25rem 0 0 0;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: #D4AF37;
    color: #0A0A0A;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.2s;
    white-space: nowrap;
  }


    gap: 0.5rem;
    margin-bottom: 0.25rem;
  }

  .order-number {
    font-family: monospace;
    font-size: 0.625rem;
    color: rgba(212, 175, 55, 0.7);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.625rem;

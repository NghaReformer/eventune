    color: rgba(245, 245, 245, 0.4);
    margin-top: 0.125rem;
  }

  .order-meta {
    text-align: right;
    flex-shrink: 0;
  }

  .order-amount {
    font-size: 0.875rem;
    font-weight: 500;
    color: #F5F5F5;
  }

  .order-date {
    font-size: 0.625rem;
    color: rgba(245, 245, 245, 0.4);
    margin-top: 0.125rem;
  }

  .order-arrow {
    flex-shrink: 0;
    color: rgba(245, 245, 245, 0.2);
    transition: color 0.2s;
  }

  .order-row:hover .order-arrow {
    color: #D4AF37;
  }

  /* Error Banner */
  .error-banner {
    padding: 1rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    border-radius: 0.5rem;
    font-size: 0.875rem;
    color: #F87171;
  }
</style>

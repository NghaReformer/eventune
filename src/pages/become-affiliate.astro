---
/**
 * Become an Affiliate - Public Landing Page
 * Marketing page for the referral program
 */

const isLoggedIn = !!Astro.cookies.get('session');
const ctaLink = isLoggedIn ? '/dashboard/referrals' : '/auth/signup';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Become an Affiliate | Eventune Studios</title>
  <meta name="description" content="Join the Eventune Studios affiliate program and earn commissions by sharing personalized music with your network. Multi-level rewards, dual currency support, and monthly payouts." />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="header-inner">
      <a href="/" class="logo-link">
        <div class="logo-icon">E</div>
        <span class="logo-text">Eventune Studios</span>
      </a>
      <nav class="header-nav">
        <a href="/services" class="nav-link">Services</a>
        <a href="/contact" class="nav-link">Contact</a>
        {isLoggedIn ? (
          <a href="/dashboard" class="cta-btn">Dashboard</a>
        ) : (
          <a href="/auth/login" class="nav-link">Sign In</a>
        )}
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-badge">Affiliate Program</div>
      <h1 class="hero-title">
        Earn Money <span class="gold-text">Sharing Music</span>
      </h1>
      <p class="hero-desc">
        Join the Eventune Studios affiliate program and earn commissions on every customer you refer.
        Multi-level rewards, lifetime tracking, and flexible payout options.
      </p>
      <div class="hero-buttons">
        <a href={ctaLink} class="primary-btn">
          {isLoggedIn ? 'Go to Dashboard' : 'Join Now'}
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
        <a href="#how-it-works" class="secondary-btn">Learn More</a>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="how-it-works" id="how-it-works">
    <div class="section-container">
      <h2 class="section-title">How It Works</h2>
      <div class="steps-grid">
        <div class="step-card">
          <div class="step-number">1</div>
          <h3 class="step-title">Sign Up</h3>
          <p class="step-desc">
            Create your account and get instant access to your unique referral link and dashboard.
          </p>
        </div>
        <div class="step-card">
          <div class="step-number">2</div>
          <h3 class="step-title">Share Your Link</h3>
          <p class="step-desc">
            Share your personalized link with friends, family, or your audience through social media, email, or QR codes.
          </p>
        </div>
        <div class="step-card">
          <div class="step-number">3</div>
          <h3 class="step-title">Earn Commissions</h3>
          <p class="step-desc">
            Earn 15% on direct referrals and 5% on second-level referrals. Track everything in real-time.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Commission Rates -->
  <section class="commission-rates">
    <div class="section-container">
      <h2 class="section-title">Commission Structure</h2>
      <p class="section-subtitle">Multi-level rewards that grow with your network</p>
      <div class="rates-grid">
        <div class="rate-card featured">
          <div class="rate-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <line x1="19" y1="8" x2="19" y2="14"></line>
              <line x1="22" y1="11" x2="16" y2="11"></line>
            </svg>
          </div>
          <div class="rate-label">Level 1 (Direct Referrals)</div>
          <div class="rate-value">15%</div>
          <p class="rate-desc">Earn 15% commission on every sale from customers you directly refer</p>
        </div>
        <div class="rate-card">
          <div class="rate-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <div class="rate-label">Level 2 (Indirect Referrals)</div>
          <div class="rate-value">5%</div>
          <p class="rate-desc">Earn 5% commission on sales from people your referrals bring in</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="benefits">
    <div class="section-container">
      <h2 class="section-title">Why Join Our Program?</h2>
      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <h3 class="benefit-title">Lifetime Tracking</h3>
          <p class="benefit-desc">Once someone uses your link, they're yours forever. No expiration on referrals.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="1" x2="12" y2="23"></line>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <h3 class="benefit-title">Dual Currency Support</h3>
          <p class="benefit-desc">Earn in USD or XAF with flexible payout methods including Mobile Money, Bank Transfer, and PayPal.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <h3 class="benefit-title">Monthly Payouts</h3>
          <p class="benefit-desc">Request payouts once you hit the minimum threshold. Fast processing within 48 hours.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 3v18h18"></path>
              <path d="M18 17V9"></path>
              <path d="M13 17V5"></path>
              <path d="M8 17v-3"></path>
            </svg>
          </div>
          <h3 class="benefit-title">Real-Time Dashboard</h3>
          <p class="benefit-desc">Track your referrals, commissions, and earnings in real-time with detailed analytics.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
          </div>
          <h3 class="benefit-title">Multi-Level Rewards</h3>
          <p class="benefit-desc">Earn from both direct referrals and their referrals. Build a network that pays.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
              <path d="M2 17l10 5 10-5"></path>
              <path d="M2 12l10 5 10-5"></path>
            </svg>
          </div>
          <h3 class="benefit-title">Marketing Materials</h3>
          <p class="benefit-desc">Get QR codes, sharable links, and promotional materials to maximize your reach.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="faq">
    <div class="section-container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <div class="faq-list">
        <div class="faq-item">
          <button class="faq-question" data-faq-toggle>
            <span>How do I get paid?</span>
            <svg class="faq-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="faq-answer">
            <p>You can choose from three payout methods: Mobile Money (MTN, Orange), Bank Transfer, or PayPal. Minimum payout is $10 USD or 5,000 XAF. Payments are processed within 48 hours of your request.</p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" data-faq-toggle>
            <span>How does the multi-level commission work?</span>
            <svg class="faq-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="faq-answer">
            <p>You earn 15% commission on every sale from customers you directly refer (Level 1). Additionally, you earn 5% commission on sales from customers that your referrals bring in (Level 2). This creates a passive income stream as your network grows.</p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" data-faq-toggle>
            <span>Is there a limit to how much I can earn?</span>
            <svg class="faq-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="faq-answer">
            <p>No! There's no cap on your earnings. The more you refer, the more you earn. With our multi-level system, your earning potential grows exponentially as your network expands.</p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" data-faq-toggle>
            <span>How long does my referral link last?</span>
            <svg class="faq-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="faq-answer">
            <p>Your referral link never expires! Once someone clicks your link and signs up, they're attributed to you forever. You'll earn commissions on all their future purchases with no time limit.</p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" data-faq-toggle>
            <span>Can I track my referrals in real-time?</span>
            <svg class="faq-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="faq-answer">
            <p>Yes! Your affiliate dashboard provides real-time tracking of all your referrals, commission earnings, conversion rates, and payout history. You'll always know exactly where you stand.</p>
          </div>
        </div>

        <div class="faq-item">
          <button class="faq-question" data-faq-toggle>
            <span>Do I need to be a customer to join?</span>
            <svg class="faq-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="faq-answer">
            <p>No, you don't need to purchase a song to join the affiliate program. However, we encourage you to experience our service firsthand so you can authentically share your experience with others.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="cta-content">
      <h2 class="cta-title">Ready to Start Earning?</h2>
      <p class="cta-desc">Join thousands of affiliates sharing the gift of personalized music</p>
      <a href={ctaLink} class="cta-button">
        {isLoggedIn ? 'Go to Dashboard' : 'Join the Program'}
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      <p class="footer-text">&copy; 2024 Eventune Studios. All rights reserved.</p>
      <nav class="footer-nav">
        <a href="/privacy" class="footer-link">Privacy Policy</a>
        <a href="/terms" class="footer-link">Terms of Service</a>
        <a href="/contact" class="footer-link">Contact</a>
      </nav>
    </div>
  </footer>
</body>
</html>

<style>
  :root {
    --studio-black: #0A0A0A;
    --studio-card: #141414;
    --studio-cream: #F5F5F5;
    --gold: #D4AF37;
    --gold-dark: #B8962E;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', sans-serif;
    background: var(--studio-black);
    color: var(--studio-cream);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Header */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(212, 175, 55, 0.1);
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo-icon {
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--studio-black);
    font-weight: 700;
    font-size: 1rem;
  }

  .logo-text {
    font-family: 'Playfair Display', serif;
    font-size: 1.25rem;
    color: var(--gold);
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-link {
    color: rgba(245, 245, 245, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--gold);
  }

  .cta-btn {
    padding: 0.625rem 1.25rem;
    background: var(--gold);
    color: var(--studio-black);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .cta-btn:hover {
    background: var(--gold-dark);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
  }

  /* Hero */
  .hero {
    padding: 8rem 1.5rem 4rem;
    text-align: center;
  }

  .hero-content {
    max-width: 48rem;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 9999px;
    color: var(--gold);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }

  .gold-text {
    color: var(--gold);
  }

  .hero-desc {
    font-size: 1.125rem;
    color: rgba(245, 245, 245, 0.6);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .hero-buttons {
      flex-direction: row;
    }
  }

  .primary-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: var(--gold);
    color: var(--studio-black);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .primary-btn:hover {
    background: var(--gold-dark);
    box-shadow: 0 8px 24px rgba(212, 175, 55, 0.3);
  }

  .secondary-btn {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    color: var(--studio-cream);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .secondary-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(212, 175, 55, 0.4);
  }

  /* Sections */
  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 1.5rem;
  }

  .section-title {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    text-align: center;
    color: rgba(245, 245, 245, 0.6);
    font-size: 1.125rem;
    margin-bottom: 3rem;
  }

  /* How It Works */
  .how-it-works {
    background: rgba(255, 255, 255, 0.02);
  }

  .steps-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .steps-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .step-card {
    text-align: center;
  }

  .step-number {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, var(--gold) 0%, var(--gold-dark) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--studio-black);
  }

  .step-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .step-desc {
    color: rgba(245, 245, 245, 0.6);
    line-height: 1.6;
  }

  /* Commission Rates */
  .rates-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 48rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .rates-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .rate-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(212, 175, 55, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    text-align: center;
  }

  .rate-card.featured {
    border-color: rgba(212, 175, 55, 0.3);
    background: rgba(212, 175, 55, 0.05);
  }

  .rate-icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1rem;
    background: rgba(212, 175, 55, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gold);
  }

  .rate-label {
    font-size: 0.875rem;
    color: rgba(245, 245, 245, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .rate-value {
    font-family: 'Playfair Display', serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--gold);
    margin-bottom: 1rem;
  }

  .rate-desc {
    color: rgba(245, 245, 245, 0.6);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* Benefits */
  .benefits-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 640px) {
    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .benefits-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }


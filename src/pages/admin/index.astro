/**
 * Admin Dashboard - Overview
 * Command center with key metrics, recent orders, and quick actions
 *
 * Security: Admin role required
 */
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getAdminStats, getRecentOrders, getOrderTrends } from '../../services/admin.service';
import { getFirstName, type SessionData } from '../../lib/auth/session';
import { getRoleDisplayName, hasPermission, getPermissionsForRole } from '../../lib/auth/admin-session';

// Get session from middleware (set before page runs)
const session = Astro.locals.session as SessionData;
const profile = session?.profile;
const adminRole = profile?.admin_role as 'super_admin' | 'order_manager' | 'support' | null;
const permissions = adminRole ? getPermissionsForRole(adminRole) : [];
const firstName = getFirstName(profile);

// Fetch dashboard data
const [stats, recentOrders, trends] = await Promise.all([
  getAdminStats(),
  getRecentOrders(10),
  getOrderTrends(),
]);

// Status color mapping with inline styles
const statusStyles: Record<string, { bg: string; color: string }> = {
  pending: { bg: 'rgba(245, 158, 11, 0.1)', color: '#FBBF24' },
  payment_pending: { bg: 'rgba(245, 158, 11, 0.1)', color: '#FBBF24' },
  paid: { bg: 'rgba(16, 185, 129, 0.1)', color: '#34D399' },
  in_progress: { bg: 'rgba(59, 130, 246, 0.1)', color: '#60A5FA' },
  composing: { bg: 'rgba(59, 130, 246, 0.1)', color: '#60A5FA' },
  recording: { bg: 'rgba(139, 92, 246, 0.1)', color: '#A78BFA' },
  mixing: { bg: 'rgba(99, 102, 241, 0.1)', color: '#818CF8' },
  review: { bg: 'rgba(6, 182, 212, 0.1)', color: '#22D3EE' },
  completed: { bg: 'rgba(16, 185, 129, 0.1)', color: '#34D399' },
  delivered: { bg: 'rgba(212, 175, 55, 0.15)', color: '#D4AF37' },
  cancelled: { bg: 'rgba(239, 68, 68, 0.1)', color: '#F87171' },
};

function getStatusStyle(status: string) {
  return statusStyles[status] || statusStyles.pending;
}

function formatCurrency(amount: number, currency: string) {
  if (currency === 'XAF') {
    return `${amount.toLocaleString()} XAF`;
  }
  return `$${amount.toLocaleString()}`;
}

function formatDate(date: string) {
  return new Date(date).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  });
}

function formatRelativeTime(date: string) {
  const now = new Date();
  const then = new Date(date);
  const diffMs = now.getTime() - then.getTime();
  const diffMins = Math.floor(diffMs / 60000);
  const diffHours = Math.floor(diffMs / 3600000);
  const diffDays = Math.floor(diffMs / 86400000);

  if (diffMins < 60) return `${diffMins}m ago`;
  if (diffHours < 24) return `${diffHours}h ago`;
  return `${diffDays}d ago`;
}

const canViewAnalytics = hasPermission(permissions, 'analytics:view');
const canManageContent = hasPermission(permissions, 'content:update');
---

<AdminLayout title="Dashboard" activeNav="dashboard">
  <div class="admin-dashboard">
    <!-- Welcome Section -->
    <div class="welcome-section">
      <div class="welcome-content">
        <h2 class="welcome-title">
          Welcome back, <span class="gold-text">{firstName}</span>
        </h2>
        <span class="live-indicator">
          <span class="live-dot"></span>
          Live
        </span>
      </div>
      <p class="welcome-sub">Here's what's happening with Eventune Studios today.</p>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
      <!-- Total Orders -->
      <div class="stat-card">
        <div class="stat-icon gold-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value">{stats.totalOrders}</p>
          <p class="stat-label">Total Orders</p>
        </div>
        <div class="stat-trend positive">
          <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
          </svg>
          <span>{stats.ordersThisWeek} this week</span>
        </div>
        <div class="stat-glow gold-glow"></div>
      </div>

      <!-- Revenue USD -->
      <div class="stat-card">
        <div class="stat-icon emerald-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value emerald-text">${stats.revenueUSD.toLocaleString()}</p>
          <p class="stat-label">Revenue (USD)</p>
        </div>
        <div class="stat-glow emerald-glow"></div>
      </div>

      <!-- Pending Orders -->
      <div class="stat-card">
        <div class="stat-icon amber-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value amber-text">{stats.pendingOrders}</p>
          <p class="stat-label">Pending</p>
        </div>
        {stats.pendingOrders > 0 && (
          <div class="stat-alert">
            <span class="alert-dot"></span>
            Needs attention
          </div>
        )}
        <div class="stat-glow amber-glow"></div>
      </div>

      <!-- Completed Today -->
      <div class="stat-card">
        <div class="stat-icon blue-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value blue-text">{stats.completedToday}</p>
          <p class="stat-label">Completed Today</p>
        </div>
        <div class="stat-glow blue-glow"></div>
      </div>
    </div>

    <!-- Revenue XAF Card (Secondary) -->
    {canViewAnalytics && (
      <div class="revenue-xaf-card">
        <div class="revenue-xaf-left">
          <div class="revenue-xaf-icon">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
            </svg>
          </div>
          <div>
            <p class="revenue-xaf-label">Cameroon Revenue (XAF)</p>
            <p class="revenue-xaf-value">{stats.revenueXAF.toLocaleString()} XAF</p>
          </div>
        </div>
        <div class="revenue-xaf-right">
          <p class="customers-label">Customers</p>
          <p class="customers-value">{stats.customersTotal}</p>
        </div>
      </div>
    )}

    <!-- Charts Row -->
    {canViewAnalytics && (
      <div class="charts-grid">
        <!-- Orders Chart -->
        <div class="chart-card">
          <div class="chart-header">
            <h3 class="chart-title">Orders This Week</h3>
            <span class="chart-badge">7 days</span>
          </div>
          <div class="chart-container">
            <div class="mini-chart">
              {trends.labels.map((label, i) => (
                <div class="chart-bar-container">
                  <div
                    class="chart-bar gold-bar"
                    style={`height: ${Math.max(10, (trends.orders[i] / Math.max(...trends.orders, 1)) * 100)}%;`}
                  >
                    <span class="chart-tooltip">{trends.orders[i]} orders</span>
                  </div>
                  <span class="chart-label">{label}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Revenue Chart -->
        <div class="chart-card">
          <div class="chart-header">
            <h3 class="chart-title">Revenue Trend</h3>
            <span class="chart-badge">7 days</span>
          </div>
          <div class="chart-container">
            <div class="mini-chart">
              {trends.labels.map((label, i) => (
                <div class="chart-bar-container">
                  <div
                    class="chart-bar emerald-bar-fill"
                    style={`height: ${Math.max(10, (trends.revenue[i] / Math.max(...trends.revenue, 1)) * 100)}%;`}
                  >
                    <span class="chart-tooltip">${trends.revenue[i]}</span>
                  </div>
                  <span class="chart-label">{label}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    )}

    <!-- Quick Actions -->
    <div class="quick-actions">
      <a href="/admin/orders" class="action-btn primary">
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        View All Orders
      </a>
      {canManageContent && (
        <a href="/admin/content" class="action-btn secondary">
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Manage Content
        </a>
      )}
      {canViewAnalytics && (
        <a href="/admin/analytics" class="action-btn secondary">
          <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          View Analytics
        </a>
      )}
    </div>

    <!-- Recent Orders -->
    <section class="orders-section">
      <div class="section-header">
        <h3 class="section-title">Recent Orders</h3>
        <a href="/admin/orders" class="view-all-link">
          View all
          <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      {recentOrders.length === 0 ? (
        <div class="empty-state">
          <div class="empty-icon">
            <svg width="40" height="40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <p class="empty-text">No orders yet</p>
        </div>
      ) : (
        <div class="orders-table-wrapper">
          <table class="orders-table">
            <thead>
              <tr>
                <th>Order</th>
                <th>Customer</th>
                <th class="hide-mobile">Package</th>
                <th>Status</th>
                <th class="hide-mobile">Amount</th>
                <th class="hide-mobile">Date</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {recentOrders.map((order) => {
                const style = getStatusStyle(order.status);
                return (
                  <tr class="order-row">
                    <td>
                      <span class="order-number">{order.order_number}</span>
                    </td>
                    <td>
                      <div class="customer-cell">
                        <span class="customer-name">{order.customer_name || 'N/A'}</span>
                        <span class="customer-email">{order.customer_email}</span>
                      </div>
                    </td>
                    <td class="hide-mobile">
                      <span class="package-badge">{order.package_slug?.replace(/-/g, ' ')}</span>
                    </td>
                    <td>
                      <span class="status-badge" style={`background: ${style.bg}; color: ${style.color};`}>
                        <span class="status-dot" style={`background: ${style.color};`}></span>
                        {order.status.replace(/_/g, ' ')}
                      </span>
                    </td>
                    <td class="hide-mobile">
                      <span class="amount">{formatCurrency(order.amount_expected, order.currency)}</span>
                    </td>
                    <td class="hide-mobile">
                      <span class="date">{formatRelativeTime(order.created_at)}</span>
                    </td>
                    <td>
                      <a href={`/admin/orders/${order.id}`} class="view-btn">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </a>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      )}
    </section>
  </div>
</AdminLayout>


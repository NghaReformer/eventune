                </div>
                <div class="feature-row">
                  <span class="feature-label">Discovery Call</span>
                  <span class:list={['feature-value', pkg.includes_discovery_call && 'text-emerald-400']}>
                    {pkg.includes_discovery_call ? 'Yes' : 'No'}
                  </span>
                </div>
                <div class="feature-row">
                  <span class="feature-label">Instrumental</span>
                  <span class:list={['feature-value', pkg.includes_instrumental && 'text-emerald-400']}>
                    {pkg.includes_instrumental ? 'Yes' : 'No'}
                  </span>
                </div>
                <div class="feature-row">
                  <span class="feature-label">Full Rights</span>
                  <span class:list={['feature-value', pkg.includes_full_rights && 'text-emerald-400']}>
                    {pkg.includes_full_rights ? 'Yes' : 'No'}
                  </span>
                </div>
              </div>

              {canEdit && (
                <div class="card-actions">
                  <button class="btn-icon edit-package-btn" data-id={pkg.id} data-package={JSON.stringify(pkg)} title="Edit">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </button>
                  <button class="btn-icon btn-danger delete-package-btn" data-id={pkg.id} data-name={pkg.name} title="Delete">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>

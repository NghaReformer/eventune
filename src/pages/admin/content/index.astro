    btn.addEventListener('click', () => {
      deleteTestimonialId = (btn as HTMLElement).dataset.id || null;
      const name = (btn as HTMLElement).dataset.name || 'this testimonial';
      const itemNameEl = document.getElementById('delete-item-name');
      if (itemNameEl) itemNameEl.textContent = `"${name}"`;
      openModal('delete-modal');
    });
  });

  // ==================== DELETE CONFIRMATION ====================
  document.getElementById('confirm-delete-btn')?.addEventListener('click', async () => {
    const btn = document.getElementById('confirm-delete-btn') as HTMLButtonElement;
    btn.disabled = true;
    btn.textContent = 'Deleting...';

    try {
      let endpoint = '';
      let id = '';

      if (deletePackageId) {
        endpoint = '/api/admin/content/packages/delete';
        id = deletePackageId;
      } else if (deleteFaqId) {
        endpoint = '/api/admin/content/faq/delete';
        id = deleteFaqId;
      } else if (deleteTestimonialId) {
        endpoint = '/api/admin/content/testimonials/delete';
        id = deleteTestimonialId;
      }

      if (!endpoint || !id) {
        throw new Error('No item selected for deletion');
      }

      const response = await fetch(endpoint, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'same-origin',
        body: JSON.stringify({ id, csrf_token: getCSRFToken() }),
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Failed to delete');
      }

      window.location.reload();
    } catch (error) {
      console.error('Error deleting:', error);
      alert(error instanceof Error ? error.message : 'Failed to delete');
      btn.disabled = false;
      btn.textContent = 'Delete';
    }
  });

  // Reset delete IDs when modal closes
  document.getElementById('delete-modal')?.addEventListener('click', (e) => {
    if ((e.target as HTMLElement).closest('[data-close]') || e.target === document.getElementById('delete-modal')) {
      deletePackageId = null;
      deleteFaqId = null;
      deleteTestimonialId = null;
    }
  });
</script>

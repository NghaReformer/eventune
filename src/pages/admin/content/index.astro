<script>
  // Toggle active status
  const toggleInputs = document.querySelectorAll('.toggle-active');
  const csrfTokenEl = document.getElementById('csrf-token') as HTMLInputElement;

  toggleInputs.forEach(input => {
    input.addEventListener('change', async (e) => {
      const target = e.target as HTMLInputElement;
      const id = target.dataset.id;
      const table = target.dataset.table;
      const isActive = target.checked;
      const csrfToken = csrfTokenEl?.value || '';

      try {
        const response = await fetch('/api/admin/content/toggle-active', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id, table, is_active: isActive, csrf_token: csrfToken }),
        });

        if (!response.ok) {
          throw new Error('Failed to update');
        }

        // Visual feedback
        const card = target.closest('.package-card, .occasion-card, .faq-item, .testimonial-card');
        if (card) {
          if (isActive) {
            card.classList.remove('inactive');
          } else {
            card.classList.add('inactive');
          }
        }
      } catch (error) {
        console.error('Error toggling active status:', error);
        // Revert checkbox
        target.checked = !isActive;
      }
    });
  });
</script>

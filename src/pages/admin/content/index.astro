        <div class="section-header">
          <h3 class="font-display text-lg text-admin-cream">Event Occasions</h3>
          <p class="text-admin-cream/40 text-sm">Manage occasion types for orders</p>
        </div>

        <div class="occasions-grid">
          {occasions.map((occ) => (
            <div class:list={['occasion-card', !occ.is_active && 'inactive']}>
              <div class="occasion-header">
                <div class="occasion-icon">
                  <span>{occ.icon || 'ðŸŽµ'}</span>
                </div>
                <label class="toggle-switch">
                  <input
                    type="checkbox"
                    checked={occ.is_active}
                    data-id={occ.id}
                    data-table="config_occasions"
                    class="toggle-active"
                    disabled={!canEdit}
                  />
                  <span class="toggle-slider"></span>
                </label>
              </div>

              <h4 class="occasion-name">{occ.name}</h4>
              <p class="occasion-tagline">{occ.tagline}</p>
              <p class="occasion-description">{occ.description}</p>

              <div class="occasion-meta">
                <span class="meta-item">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                  </svg>
                  {occ.slug}
                </span>
                <span class="meta-item">Order #{occ.display_order}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- FAQ Tab -->
    {activeTab === 'faq' && (
      <div class="content-section">
        <div class="section-header flex-header">
          <div>
            <h3 class="font-display text-lg text-admin-cream">FAQ Items</h3>
            <p class="text-admin-cream/40 text-sm">Manage frequently asked questions</p>
          </div>
          {canEdit && (
            <button class="btn-add" id="add-faq-btn">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add FAQ
            </button>
          )}
        </div>

        <div class="faq-list">
          {faqItems.map((faq, index) => (
            <div class:list={['faq-item', !faq.is_active && 'inactive']}>
              <div class="faq-header">
                <div class="faq-number">Q{index + 1}</div>
                <div class="faq-controls">
                  {faq.category && (
                    <span class="faq-category">{faq.category}</span>
                  )}
                  <label class="toggle-switch small">
                    <input
                      type="checkbox"
                      checked={faq.is_active}
                      data-id={faq.id}
                      data-table="config_faq"
                      class="toggle-active"
                      disabled={!canEdit}
                    />
                    <span class="toggle-slider"></span>
                  </label>
                </div>
              </div>
              <h4 class="faq-question">{faq.question}</h4>
              <p class="faq-answer">{faq.answer}</p>

              {canEdit && (
                <div class="card-actions faq-actions">
                  <button class="btn-icon edit-faq-btn" data-id={faq.id} data-faq={JSON.stringify(faq)} title="Edit">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  </button>
                  <button class="btn-icon btn-danger delete-faq-btn" data-id={faq.id} data-question={faq.question} title="Delete">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  </button>

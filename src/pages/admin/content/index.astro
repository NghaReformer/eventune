              )}
            </div>
          ))}
        </div>

        {faqItems.length === 0 && (
          <div class="empty-state">
            <p class="text-admin-cream/40">No FAQ items found</p>
          </div>
        )}
      </div>
    )}

    <!-- Testimonials Tab -->
    {activeTab === 'testimonials' && (
      <div class="content-section">
        <div class="section-header flex-header">
          <div>
            <h3 class="font-display text-lg text-admin-cream">Customer Testimonials</h3>
            <p class="text-admin-cream/40 text-sm">Manage customer reviews and testimonials (text & video)</p>
          </div>
          {canEdit && (
            <button class="btn-add" id="add-testimonial-btn">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Add Testimonial
            </button>
          )}
        </div>

        {testimonials.length === 0 ? (
          <div class="empty-state">
            <svg class="w-12 h-12 text-gold/20 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <p class="text-admin-cream/40">No testimonials yet</p>
            <p class="text-admin-cream/30 text-sm mt-1">Add testimonials to display on the website</p>
          </div>
        ) : (
          <div class="testimonials-grid">
            {testimonials.map((test) => (
              <div class:list={['testimonial-card', !test.is_active && 'inactive']}>
                <div class="testimonial-header">
                  <div class="testimonial-author">
                    <div class="author-avatar">
                      {test.image_url ? (
                        <img src={test.image_url} alt={test.customer_name} />
                      ) : (
                        <span>{test.customer_name.charAt(0)}</span>
                      )}
                    </div>
                    <div class="author-info">
                      <span class="author-name">{test.customer_name}</span>
                      {test.customer_location && (
                        <span class="author-location">{test.customer_location}</span>
                      )}
                    </div>
                  </div>
                  <label class="toggle-switch">
                    <input
                      type="checkbox"
                      checked={test.is_active}
                      data-id={test.id}
                      data-table="config_testimonials"
                      class="toggle-active"
                      disabled={!canEdit}
                    />
                    <span class="toggle-slider"></span>
                  </label>
                </div>

                <blockquote class="testimonial-quote">"{test.quote}"</blockquote>

                {(test as any).video_url && (
                  <div class="testimonial-video-badge">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    <span>Video Testimonial</span>
                  </div>
                )}

                <div class="testimonial-footer">
                  {test.occasion && (
                    <span class="testimonial-occasion">{formatSlug(test.occasion)}</span>
                  )}
                  {test.rating && (
                    <div class="testimonial-rating">
                      {Array.from({ length: 5 }).map((_, i) => (
                        <svg
                          class:list={['w-3 h-3', i < test.rating! ? 'text-gold' : 'text-admin-cream/20']}
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      ))}
                    </div>
                  )}
                  {test.is_featured && (
                    <span class="featured-badge">Featured</span>
                  )}
                </div>

                {canEdit && (
                  <div class="card-actions">
                    <button class="btn-icon edit-testimonial-btn" data-id={test.id} data-testimonial={JSON.stringify(test)} title="Edit">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </button>
                    <button class="btn-icon btn-danger delete-testimonial-btn" data-id={test.id} data-name={test.customer_name} title="Delete">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                )}
              </div>
            ))}
          </div>
        )}
      </div>
    )}
  </div>

  <!-- Package Modal -->
  <div class="modal-overlay" id="package-modal">
    <div class="modal">
      <div class="modal-header">
        <h3 class="modal-title" id="package-modal-title">Add Package</h3>
        <button class="modal-close" data-close="package-modal">

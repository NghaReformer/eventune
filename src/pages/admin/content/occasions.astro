<script>
  // Helper: Get CSRF token from cookie (always use current value)
  const getCSRFToken = () => {
    const match = document.cookie.match(/(?:^|;\s*)csrf-token=([^;]*)/);
    return match ? decodeURIComponent(match[1]) : '';
  };

  // Toggle active status
  const toggleInputs = document.querySelectorAll('.toggle-active');

  toggleInputs.forEach(input => {
    input.addEventListener('change', async (e) => {
      const target = e.target as HTMLInputElement;
      const id = target.dataset.id;
      const table = target.dataset.table;
      const isActive = target.checked;
      const csrfToken = getCSRFToken();

      console.log('[Toggle Occasions] Attempting toggle:', { id, table, isActive, csrfToken: csrfToken ? 'present' : 'missing' });

      try {
        const response = await fetch('/api/admin/content/toggle-active', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({ id, table, is_active: isActive, csrf_token: csrfToken }),
        });

        if (!response.ok) {
          const errorData = await response.json();
          console.error('[Toggle Occasions] API error:', errorData);
          throw new Error(errorData.error || 'Failed to update');
        }

        const card = target.closest('.occasion-card');
        if (card) {
          if (isActive) {
            card.classList.remove('inactive');
          } else {
            card.classList.add('inactive');
          }
        }

        console.log('[Toggle Occasions] Success');
      } catch (error) {
        console.error('Error toggling active status:', error);
        alert(error instanceof Error ? error.message : 'Failed to update status. Please refresh and try again.');
        target.checked = !isActive;
      }
    });
  });

  // Modal handling
  const modal = document.getElementById('occasion-modal');
  const addBtn = document.getElementById('add-occasion-btn');
  const closeBtn = document.getElementById('close-modal');
  const cancelBtn = document.getElementById('cancel-btn');
  const form = document.getElementById('occasion-form') as HTMLFormElement;
  const modalTitle = document.getElementById('modal-title');
  const submitText = document.getElementById('submit-text');

  let editMode = false;

  function openAddModal() {
    editMode = false;
    modalTitle!.textContent = 'Add New Occasion';
    submitText!.textContent = 'Create Occasion';
    form.reset();
    (document.getElementById('occasion-id') as HTMLInputElement).value = '';
    modal?.classList.add('open');
  }

  function closeModal() {
    modal?.classList.remove('open');
    form.reset();
    editMode = false;
  }

  function populateForm(occasion: any) {
    (document.getElementById('occasion-id') as HTMLInputElement).value = occasion.id || '';
    (document.getElementById('name') as HTMLInputElement).value = occasion.name || '';
    (document.getElementById('slug') as HTMLInputElement).value = occasion.slug || '';
    (document.getElementById('tagline') as HTMLInputElement).value = occasion.tagline || '';
    (document.getElementById('description') as HTMLTextAreaElement).value = occasion.description || '';
    (document.getElementById('icon') as HTMLInputElement).value = occasion.icon || '';
    (document.getElementById('display_order') as HTMLInputElement).value = occasion.display_order?.toString() || '10';
    (document.getElementById('meta_title') as HTMLInputElement).value = occasion.meta_title || '';
    (document.getElementById('meta_description') as HTMLTextAreaElement).value = occasion.meta_description || '';

    // Handle is_active checkbox if it exists
    const isActiveCheckbox = document.getElementById('is_active') as HTMLInputElement;
    if (isActiveCheckbox) {
      isActiveCheckbox.checked = occasion.is_active !== false;
    }
  }

  addBtn?.addEventListener('click', () => openAddModal());
  closeBtn?.addEventListener('click', closeModal);
  cancelBtn?.addEventListener('click', closeModal);

  document.querySelectorAll('.btn-edit').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const target = e.currentTarget as HTMLElement;
      const occasionData = target.dataset.occasion;

      if (occasionData) {
        try {
          const occasion = JSON.parse(occasionData);
          editMode = true;
          modalTitle!.textContent = 'Edit Occasion';
          submitText!.textContent = 'Update Occasion';
          populateForm(occasion);
          modal?.classList.add('open');
        } catch (err) {
          console.error('Failed to parse occasion data:', err);
        }
      }
    });
  });

  document.querySelectorAll('.btn-delete').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const target = e.currentTarget as HTMLElement;
      const id = target.dataset.id;
      const name = target.dataset.name;

      if (!confirm(`Are you sure you want to delete "${name}"? This action cannot be undone.`)) {
        return;
      }

      try {
        const response = await fetch(`/api/admin/content/occasions/delete`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({ id, csrf_token: getCSRFToken() }),
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.error || 'Failed to delete');
        }

        window.location.reload();
      } catch (error) {
        alert(error instanceof Error ? error.message : 'Failed to delete occasion');
      }
    });
  });

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const originalText = submitText!.textContent;

    submitBtn.disabled = true;
    submitText!.textContent = editMode ? 'Updating...' : 'Creating...';

    const formData = new FormData(form);
    const data: any = {};
    formData.forEach((value, key) => {
      if (key === 'is_active') {
        data[key] = (document.getElementById(key) as HTMLInputElement).checked;
      } else if (key === 'display_order') {
        data[key] = parseInt(value as string, 10);
      } else {
        data[key] = value;
      }
    });
    data.csrf_token = getCSRFToken();

    try {
      const endpoint = editMode ? '/api/admin/content/occasions/update' : '/api/admin/content/occasions/create';
      const response = await fetch(endpoint, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'same-origin',
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (!response.ok) {
        throw new Error(result.error || 'Failed to save');
      }

      window.location.reload();
    } catch (error) {
      alert(error instanceof Error ? error.message : 'Failed to save occasion');
      submitBtn.disabled = false;
      submitText!.textContent = originalText;
    }
  });

  // Auto-generate slug from name
  const nameInput = document.getElementById('name') as HTMLInputElement;
  const slugInput = document.getElementById('slug') as HTMLInputElement;

  nameInput?.addEventListener('input', () => {
    if (!editMode || !slugInput.value) {
      const slug = nameInput.value
        .toLowerCase()
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/^-+|-+$/g, '');
      slugInput.value = slug;
    }
  });
</script>

---
/**
 * Admin Occasions Management Page
 * Full CRUD interface for managing occasion categories
 *
 * Security: Admin role with content:view permission required
 */
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getContentOccasions } from '../../../services/admin.service';
import { hasPermission, getPermissionsForRole } from '../../../lib/auth/admin-session';
import type { SessionData } from '../../../lib/auth/session';

// Get session from middleware
const session = Astro.locals.session as SessionData;
const profile = session?.profile;
const adminRole = profile?.admin_role as 'super_admin' | 'order_manager' | 'support' | null;
const permissions = adminRole ? getPermissionsForRole(adminRole) : [];
const csrfToken = (Astro.locals.csrfToken as string) || '';

// Verify content permission
if (!hasPermission(permissions, 'content:view')) {
  return Astro.redirect('/admin?error=permission_denied');
}

const canEdit = hasPermission(permissions, 'content:update');
const canDelete = hasPermission(permissions, 'content:delete');

// Fetch occasions
const occasions = await getContentOccasions();
---

<AdminLayout title="Manage Occasions" activeNav="content">
  <input type="hidden" id="csrf-token" value={csrfToken} />
  <script is:inline>
    // Debug: Log CSRF token on page load
    console.log('[Occasions Page] CSRF token:', {
      value: document.getElementById('csrf-token')?.value,
      length: document.getElementById('csrf-token')?.value?.length,
    });
  </script>

  <!-- Header with Actions -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
    <div>
      <h2 class="font-display text-2xl text-admin-cream">Occasion Categories</h2>
      <p class="text-admin-cream/50 mt-1">Manage event occasions available for custom songs</p>
    </div>
    {canEdit && (
      <button id="add-occasion-btn" class="action-btn primary">
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add New Occasion
      </button>
    )}
  </div>

  <!-- Occasions Grid -->
  <div class="occasions-grid">
    {occasions.map((occ) => (
      <div class:list={['occasion-card', !occ.is_active && 'inactive']} data-id={occ.id}>
        <div class="card-header">
          <div class="occasion-icon-lg">
            <span>{occ.icon || 'ðŸŽµ'}</span>
          </div>
          <label class="toggle-switch">
            <input
              type="checkbox"
              checked={occ.is_active}
              data-id={occ.id}
              data-table="config_occasions"
              class="toggle-active"
              disabled={!canEdit}
            />
            <span class="toggle-slider"></span>
          </label>
        </div>

        <h3 class="occasion-title">{occ.name}</h3>
        <p class="occasion-tagline">{occ.tagline}</p>
        <p class="occasion-description">{occ.description}</p>

        <div class="occasion-meta">
          <div class="meta-row">
            <span class="meta-label">Slug:</span>
            <code class="meta-value">{occ.slug}</code>
          </div>
          <div class="meta-row">
            <span class="meta-label">Display Order:</span>
            <span class="meta-value">{occ.display_order}</span>
          </div>
        </div>

        {canEdit && (
          <div class="card-actions">
            <button class="btn-edit" data-id={occ.id} data-occasion={JSON.stringify(occ)}>
              <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit
            </button>
            {canDelete && (
              <button class="btn-delete" data-id={occ.id} data-name={occ.name}>
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete
              </button>
            )}
          </div>
        )}
      </div>
    ))}
  </div>

  {occasions.length === 0 && (
    <div class="empty-state">
      <svg class="w-16 h-16 text-gold/20 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
      </svg>
      <p class="text-admin-cream/40 text-lg">No occasions found</p>
      <p class="text-admin-cream/30 text-sm mt-1">Click "Add New Occasion" to get started</p>
    </div>
  )}

  <!-- Edit/Create Modal -->
  <div id="occasion-modal" class="modal">
    <div class="modal-backdrop"></div>
    <div class="modal-container">
      <div class="modal-header">
        <h3 class="modal-title" id="modal-title">Add New Occasion</h3>
        <button class="modal-close" id="close-modal">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <form id="occasion-form" class="modal-body">
        <input type="hidden" id="occasion-id" name="id" />

        <div class="form-grid">
          <div class="form-group">
            <label for="name" class="form-label">Name *</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              maxlength="100"
              class="form-input"
              placeholder="e.g., Wedding, Birthday"
            />
          </div>

          <div class="form-group">
            <label for="slug" class="form-label">Slug *</label>
            <input
              type="text"
              id="slug"
              name="slug"
              required
              pattern="[a-z0-9-]+"
              maxlength="100"
              class="form-input"
              placeholder="e.g., wedding, birthday"
            />
            <p class="form-hint">Lowercase letters, numbers, and hyphens only</p>
          </div>

          <div class="form-group full-width">
            <label for="tagline" class="form-label">Tagline</label>
            <input
              type="text"
              id="tagline"
              name="tagline"
              maxlength="200"
              class="form-input"
              placeholder="Short catchy phrase"
            />
          </div>

          <div class="form-group full-width">
            <label for="description" class="form-label">Description</label>
            <textarea
              id="description"
              name="description"
              maxlength="500"
              rows="3"
              class="form-textarea"
              placeholder="Detailed description of this occasion category"
            ></textarea>
          </div>

          <div class="form-group">
            <label for="icon" class="form-label">Icon (Emoji)</label>
            <input
              type="text"
              id="icon"
              name="icon"
              maxlength="10"
              class="form-input"
              placeholder="ðŸŽµ"
            />
          </div>

          <div class="form-group">
            <label for="display_order" class="form-label">Display Order</label>
            <input
              type="number"
              id="display_order"
              name="display_order"
              min="0"
              max="1000"
              value="10"
              class="form-input"
            />
          </div>

          <div class="form-group full-width">
            <label for="meta_title" class="form-label">Meta Title (SEO)</label>
            <input
              type="text"
              id="meta_title"
              name="meta_title"
              maxlength="100"
              class="form-input"
              placeholder="Page title for search engines"
            />
          </div>

          <div class="form-group full-width">
            <label for="meta_description" class="form-label">Meta Description (SEO)</label>
            <textarea
              id="meta_description"
              name="meta_description"
              maxlength="200"
              rows="2"
              class="form-textarea"
              placeholder="Page description for search engines"
            ></textarea>
          </div>

          <div class="form-group full-width">
            <label class="checkbox-label">
              <input
                type="checkbox"
                id="is_active"
                name="is_active"
                checked
                class="checkbox-input"
              />
              <span>Active (visible to customers)</span>
            </label>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn-secondary" id="cancel-btn">Cancel</button>
          <button type="submit" class="btn-primary" id="submit-btn">
            <span id="submit-text">Create Occasion</span>
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>


---
/**
 * Referral System Dashboard
 * Overview of agents, commissions, and program performance
 */
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getReferralStats, getRecentReferrals, getRecentCommissions } from '../../../services/admin-referral.service';
import { getFirstName, type SessionData } from '../../../lib/auth/session';

// Session check
const session = Astro.locals.session as SessionData;
if (!session) return Astro.redirect('/auth/login');

// Fetch data
const [stats, recentReferrals, recentCommissions] = await Promise.all([
  getReferralStats(),
  getRecentReferrals(5),
  getRecentCommissions(5)
]);

function formatCurrency(amount: number) {
  return `$${amount.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`;
}

function formatDate(date: string) {
  return new Date(date).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  });
}
---

<AdminLayout title="Referrals" activeNav="referrals">
  <div class="referral-dashboard">
    
    <!-- Stats Grid -->
    <div class="stats-grid">
      <!-- Total Agents -->
      <div class="stat-card">
        <div class="stat-icon gold-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value">{stats.totalAgents}</p>
          <p class="stat-label">Active Agents</p>
        </div>
        <div class="stat-glow gold-glow"></div>
      </div>

      <!-- Paid Commissions -->
      <div class="stat-card">
        <div class="stat-icon emerald-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value emerald-text">{formatCurrency(stats.totalPaid)}</p>
          <p class="stat-label">Paid Commissions</p>
        </div>
        <div class="stat-glow emerald-glow"></div>
      </div>

      <!-- Pending Commissions -->
      <div class="stat-card">
        <div class="stat-icon amber-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value amber-text">{formatCurrency(stats.totalPending)}</p>
          <p class="stat-label">Pending Payouts</p>
        </div>
        <div class="stat-glow amber-glow"></div>
      </div>

      <!-- Active Programs -->
      <div class="stat-card">
        <div class="stat-icon blue-icon">
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
          </svg>
        </div>
        <div class="stat-content">
          <p class="stat-value blue-text">{stats.activePrograms}</p>
          <p class="stat-label">Active Programs</p>
        </div>
        <div class="stat-glow blue-glow"></div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
      <a href="/admin/referrals/programs" class="action-btn primary">
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
        Manage Programs
      </a>
      <a href="/admin/referrals/agents" class="action-btn secondary">
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        View Agents
      </a>
      <a href="/admin/referrals/commissions" class="action-btn secondary">
        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Commissions
      </a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Recent Referrals -->
      <section class="data-section">
        <div class="section-header">
          <h3 class="section-title">Recent Referrals</h3>
        </div>
        <div class="table-wrapper">
          <table class="data-table">
            <thead>
              <tr>
                <th>Referee</th>
                <th>Referred By</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              {recentReferrals.length === 0 ? (
                <tr><td colspan="3" class="empty-cell">No referrals yet</td></tr>
              ) : (
                recentReferrals.map(r => (
                  <tr>
                    <td>
                      <div class="user-cell">
                        <span class="user-name">{r.referee_name}</span>
                        <span class="user-email">{r.referee_email}</span>
                      </div>
                    </td>
                    <td>
                      <span class="code-badge">{r.referrer_code}</span>
                    </td>
                    <td class="date-cell">{formatDate(r.attributed_at)}</td>
                  </tr>
                ))
              )}
            </tbody>
          </table>
        </div>
      </section>

      <!-- Recent Commissions -->
      <section class="data-section">
        <div class="section-header">
          <h3 class="section-title">Recent Commissions</h3>
        </div>
        <div class="table-wrapper">
          <table class="data-table">
            <thead>
              <tr>
                <th>Referrer</th>
                <th>Amount</th>
                <th>Level</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              {recentCommissions.length === 0 ? (
                <tr><td colspan="4" class="empty-cell">No commissions yet</td></tr>
              ) : (
                recentCommissions.map(c => (
                  <tr>
                    <td><span class="code-badge">{c.referrer_code}</span></td>
                    <td class="amount-cell">{formatCurrency(c.amount)}</td>
                    <td><span class="level-badge">L{c.level}</span></td>
                    <td>
                      <span class={`status-badge ${c.status}`}>
                        {c.status}
                      </span>
                    </td>
                  </tr>
                ))
              )}
            </tbody>
          </table>
        </div>
      </section>
    </div>

  </div>
</AdminLayout>

<style>
  :root {
    --admin-black: #0A0A0A;
    --admin-card: #111111;
    --admin-cream: #F5F5F5;
    --gold: #D4AF37;
  }

  .referral-dashboard {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 0.75rem;
  }

  @media (min-width: 640px) {
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .stats-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
    }
  }

  .stat-card {
    position: relative;
    background: var(--admin-card);
    border: 1px solid rgba(212, 175, 55, 0.08);
    border-radius: 0.75rem;
    padding: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: rgba(212, 175, 55, 0.2);
    transform: translateY(-2px);
  }

  .stat-icon {
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.75rem;
  }

  .gold-icon { background: rgba(212, 175, 55, 0.1); color: var(--gold); }
  .emerald-icon { background: rgba(16, 185, 129, 0.1); color: #34D399; }
  .amber-icon { background: rgba(245, 158, 11, 0.1); color: #FBBF24; }
  .blue-icon { background: rgba(59, 130, 246, 0.1); color: #60A5FA; }

  .stat-value {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--admin-cream);
    line-height: 1;
    margin: 0 0 0.25rem 0;
  }

  .emerald-text { color: #34D399; }
  .amber-text { color: #FBBF24; }
  .blue-text { color: #60A5FA; }

  .stat-label {
    font-size: 0.75rem;
    color: rgba(245, 245, 245, 0.5);
    margin: 0;
  }

  .stat-glow {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .stat-card:hover .stat-glow { opacity: 0.6; }
  .gold-glow { background: var(--gold); }
  .emerald-glow { background: #34D399; }
  .amber-glow { background: #FBBF24; }
  .blue-glow { background: #60A5FA; }

  /* Quick Actions */
  .quick-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
  }

  .action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border-radius: 0.5rem;
    font-weight: 500;
    font-size: 0.8125rem;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .action-btn.primary {
    background: linear-gradient(135deg, var(--gold) 0%, #B8962E 100%);
    color: var(--admin-black);
  }

  .action-btn.secondary {
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.2);
    color: var(--gold);
  }

  .action-btn:hover { transform: translateY(-1px); }

  /* Data Sections */
  .data-section {
    background: var(--admin-card);
    border: 1px solid rgba(212, 175, 55, 0.08);
    border-radius: 0.75rem;
    overflow: hidden;
  }

  .section-header {
    padding: 1rem;
    border-bottom: 1px solid rgba(212, 175, 55, 0.08);
  }

  .section-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--admin-cream);
    margin: 0;
  }

  .table-wrapper {
    overflow-x: auto;
  }

  .data-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }

  .data-table th {
    text-align: left;
    padding: 0.75rem 1rem;
    color: rgba(245, 245, 245, 0.4);
    font-weight: 500;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid rgba(212, 175, 55, 0.05);
  }

  .data-table td {
    padding: 0.75rem 1rem;
    color: rgba(245, 245, 245, 0.8);
    border-bottom: 1px solid rgba(212, 175, 55, 0.05);
  }

  .data-table tr:last-child td { border-bottom: none; }

  .user-cell {
    display: flex;
    flex-direction: column;
  }

  .user-name { font-weight: 500; color: var(--admin-cream); }
  .user-email { font-size: 0.75rem; color: rgba(245, 245, 245, 0.4); }

  .code-badge {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.2);
    border-radius: 0.25rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--gold);
  }

  .level-badge {
    font-size: 0.75rem;
    color: rgba(245, 245, 245, 0.5);
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
  }

  .status-badge.paid { background: rgba(16, 185, 129, 0.1); color: #34D399; }
  .status-badge.pending { background: rgba(245, 158, 11, 0.1); color: #FBBF24; }
  .status-badge.rejected { background: rgba(239, 68, 68, 0.1); color: #F87171; }

  .empty-cell {
    text-align: center;
    padding: 2rem;
    color: rgba(245, 245, 245, 0.3);
    font-style: italic;
  }
</style>

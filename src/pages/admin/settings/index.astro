---
/**
 * Admin Settings Page
 * Site settings, profile, and security configuration
 *
 * Security: Admin role with settings:view permission required
 */
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getSiteSettings } from '../../../services/admin.service';
import { hasPermission, getPermissionsForRole } from '../../../lib/auth/admin-session';
import type { SessionData } from '../../../lib/auth/session';

// Get session from middleware (set before page runs)
const session = Astro.locals.session as SessionData;
const user = session?.user;
const profile = session?.profile;
const adminRole = profile?.admin_role as 'super_admin' | 'order_manager' | 'support' | null;
const permissions = adminRole ? getPermissionsForRole(adminRole) : [];
const csrfToken = Astro.locals.csrfToken as string;

// Verify settings permission
if (!hasPermission(permissions, 'settings:view')) {
  return Astro.redirect('/admin?error=permission_denied');
}

const canEdit = hasPermission(permissions, 'settings:update');
const isSuperAdmin = adminRole === 'super_admin';

// Fetch site settings
const settings = await getSiteSettings();

// Parse settings with defaults
const maintenanceMode = settings.site_maintenance?.enabled || false;
const maintenanceMessage = settings.site_maintenance?.message || '';
const bookingEnabled = settings.booking_enabled === 'true' || settings.booking_enabled === true;
const defaultCapacity = settings.default_capacity || '3';
const supportWhatsapp = settings.support_whatsapp || '';

// Parse active tab from URL
const url = new URL(Astro.request.url);
const activeTab = url.searchParams.get('tab') || 'site';
---

<AdminLayout title="Settings" activeNav="settings">
  <script is:inline define:vars={{ csrfToken }}>
    // Debug: Log CSRF token on page load
    console.log('[Settings Page] CSRF token:', {
      value: csrfToken,
      length: csrfToken?.length,
    });
  </script>

  <!-- Page Header -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
    <div>
      <h2 class="font-display text-2xl text-admin-cream">Settings</h2>
      <p class="text-admin-cream/50 mt-1">Manage site configuration and preferences</p>
    </div>
  </div>

  <!-- Tabs -->
  <div class="tabs-container">
    <nav class="tabs-nav">
      <a
        href="?tab=site"
        class:list={['tab', activeTab === 'site' && 'active']}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Site Settings
      </a>
      <a
        href="?tab=profile"
        class:list={['tab', activeTab === 'profile' && 'active']}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        My Profile
      </a>
      {isSuperAdmin && (
        <a
          href="?tab=security"
          class:list={['tab', activeTab === 'security' && 'active']}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          Security
        </a>
      )}
    </nav>
  </div>

  <!-- Tab Content -->
  <div class="tab-content">
    <!-- Site Settings Tab -->
    {activeTab === 'site' && (
      <div class="settings-section">
        <form id="site-settings-form" class="settings-form">
          <input type="hidden" name="csrf_token" value={csrfToken} />

          <!-- Booking Status -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Booking Status</h3>
              <p class="setting-description">Control whether new orders are accepted</p>
            </div>
            <div class="setting-control">
              <label class="toggle-switch-lg">
                <input
                  type="checkbox"
                  name="booking_enabled"
                  checked={bookingEnabled}
                  disabled={!canEdit}
                />
                <span class="toggle-slider"></span>
                <span class="toggle-label">{bookingEnabled ? 'Accepting Orders' : 'Orders Paused'}</span>
              </label>
            </div>
          </div>

          <!-- Daily Capacity -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Default Daily Capacity</h3>
              <p class="setting-description">Maximum orders per day when not specified</p>
            </div>
            <div class="setting-control">
              <input
                type="number"
                name="default_capacity"
                value={defaultCapacity}
                min="1"
                max="10"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- Maintenance Mode -->
          <div class="setting-group danger">
            <div class="setting-header">
              <h3 class="setting-title">Maintenance Mode</h3>
              <p class="setting-description">Temporarily disable the website for maintenance</p>
            </div>
            <div class="setting-control">
              <label class="toggle-switch-lg">
                <input
                  type="checkbox"
                  name="maintenance_enabled"
                  checked={maintenanceMode}
                  disabled={!canEdit || !isSuperAdmin}
                />
                <span class="toggle-slider danger"></span>
                <span class="toggle-label">{maintenanceMode ? 'Maintenance Active' : 'Site Live'}</span>
              </label>
            </div>
          </div>

          {maintenanceMode && (
            <div class="setting-group">
              <div class="setting-header">
                <h3 class="setting-title">Maintenance Message</h3>
                <p class="setting-description">Message shown to visitors during maintenance</p>
              </div>
              <div class="setting-control">
                <textarea
                  name="maintenance_message"
                  class="setting-textarea"
                  placeholder="We're performing scheduled maintenance. Please check back soon."
                  disabled={!canEdit}
                >{maintenanceMessage}</textarea>
              </div>
            </div>
          )}

          <!-- WhatsApp Support -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">WhatsApp Support Number</h3>
              <p class="setting-description">Contact number for customer support (with country code)</p>
            </div>
            <div class="setting-control">
              <input
                type="text"
                name="support_whatsapp"
                value={supportWhatsapp.replace(/"/g, '')}
                placeholder="+237XXXXXXXXX"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- Contact Information Section Header -->
          <div class="setting-section-header">
            <h3 class="section-title">Contact Information</h3>
            <p class="section-description">Manage contact details displayed on the website</p>
          </div>

          <!-- Contact Email -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Contact Email</h3>
              <p class="setting-description">Primary email for customer inquiries</p>
            </div>
            <div class="setting-control">
              <input
                type="email"
                name="contact_email"
                value={settings.contact_email || 'hello@eventunestudios.com'}
                placeholder="hello@eventunestudios.com"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- Contact Phone -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Contact Phone Number</h3>
              <p class="setting-description">Phone number for general inquiries</p>
            </div>
            <div class="setting-control">
              <input
                type="text"
                name="contact_phone"
                value={settings.contact_phone || ''}
                placeholder="+237 XXX XXX XXX"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- Business Address -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Business Address</h3>
              <p class="setting-description">Physical business location (optional)</p>
            </div>
            <div class="setting-control">
              <input
                type="text"
                name="contact_address"
                value={settings.contact_address || ''}
                placeholder="City, Country"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- Business Hours -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Business Hours</h3>
              <p class="setting-description">Operating hours in JSON format</p>
            </div>
            <div class="setting-control" style="width: 100%;">
              <textarea
                name="contact_business_hours"
                class="setting-textarea"
                placeholder='{"weekdays": "9:00 AM - 6:00 PM (GMT+1)", "saturday": "10:00 AM - 4:00 PM (GMT+1)", "sunday": "Closed"}'
                disabled={!canEdit}
              >{settings.contact_business_hours || ''}</textarea>
            </div>
          </div>

          <!-- Social Media Section Header -->
          <div class="setting-section-header">
            <h3 class="section-title">Social Media Links</h3>
            <p class="section-description">Social media profile URLs</p>
          </div>

          <!-- Instagram -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Instagram URL</h3>
              <p class="setting-description">Full Instagram profile URL</p>
            </div>
            <div class="setting-control">
              <input
                type="url"
                name="social_instagram"
                value={settings.social_instagram || ''}
                placeholder="https://instagram.com/eventunestudios"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- YouTube -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">YouTube URL</h3>
              <p class="setting-description">Full YouTube channel URL</p>
            </div>
            <div class="setting-control">
              <input
                type="url"
                name="social_youtube"
                value={settings.social_youtube || ''}
                placeholder="https://youtube.com/@eventunestudios"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- TikTok -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">TikTok URL</h3>
              <p class="setting-description">Full TikTok profile URL</p>
            </div>
            <div class="setting-control">
              <input
                type="url"
                name="social_tiktok"
                value={settings.social_tiktok || ''}
                placeholder="https://tiktok.com/@eventunestudios"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- Twitter/X -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Twitter/X URL</h3>
              <p class="setting-description">Full Twitter/X profile URL</p>
            </div>
            <div class="setting-control">
              <input
                type="url"
                name="social_twitter"
                value={settings.social_twitter || ''}
                placeholder="https://x.com/eventunestudios"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          <!-- Facebook -->
          <div class="setting-group">
            <div class="setting-header">
              <h3 class="setting-title">Facebook URL</h3>
              <p class="setting-description">Full Facebook page URL</p>
            </div>
            <div class="setting-control">
              <input
                type="url"
                name="social_facebook"
                value={settings.social_facebook || ''}
                placeholder="https://facebook.com/eventunestudios"
                class="setting-input"
                disabled={!canEdit}
              />
            </div>
          </div>

          {canEdit && (
            <div class="form-actions">
              <button type="submit" class="save-btn">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Save Changes
              </button>
            </div>
          )}
        </form>
      </div>
    )}

    <!-- Profile Tab -->
    {activeTab === 'profile' && (
      <div class="settings-section">
        <div class="profile-card">
          <div class="profile-header">
            <div class="profile-avatar">
              <span>{(profile?.full_name || user.email).charAt(0).toUpperCase()}</span>
            </div>
            <div class="profile-info">
              <h3 class="profile-name">{profile?.full_name || 'No Name Set'}</h3>
              <p class="profile-email">{user.email}</p>
              <span class="profile-role">{adminRole?.replace(/_/g, ' ')}</span>
            </div>
          </div>

          <div class="profile-details">
            <div class="detail-row">
              <span class="detail-label">Email</span>
              <span class="detail-value">{user.email}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Phone</span>
              <span class="detail-value">{profile?.phone || 'Not set'}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Role</span>
              <span class="detail-value capitalize">{adminRole?.replace(/_/g, ' ')}</span>
            </div>
            <div class="detail-row">
              <span class="detail-label">Account Created</span>
              <span class="detail-value">
                {profile?.created_at
                  ? new Date(profile.created_at).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })
                  : 'Unknown'}
              </span>
            </div>
          </div>

          <div class="profile-actions">
            <a href="/dashboard/profile" class="profile-btn secondary">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit Profile
            </a>
            <a href="/auth/change-password" class="profile-btn secondary">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
              </svg>
              Change Password
            </a>
          </div>
        </div>

        <!-- Permissions Card -->
        <div class="permissions-card">
          <h4 class="permissions-title">Your Permissions</h4>
          <div class="permissions-grid">
            {Object.entries({
              'Dashboard Access': 'dashboard:view',
              'View Orders': 'orders:view',
              'Manage Orders': 'orders:update',
              'View Customers': 'customers:view',
              'View Analytics': 'analytics:view',
              'View Content': 'content:view',
              'Manage Content': 'content:update',
              'Export Data': 'orders:export',
              'Process Refunds': 'orders:refund',
              'View Settings': 'settings:view',
              'Manage Settings': 'settings:update',
            }).map(([label, perm]) => (
              <div class="permission-item">
                <span class:list={['permission-status', hasPermission(permissions, perm) ? 'granted' : 'denied']}>
                  {hasPermission(permissions, perm) ? (
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  ) : (
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  )}
                </span>
                <span class="permission-label">{label}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    )}

    <!-- Security Tab (Super Admin Only) -->
    {activeTab === 'security' && isSuperAdmin && (
      <div class="settings-section">
        <div class="security-card">
          <div class="security-header">
            <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <div>
              <h3 class="security-title">Security Settings</h3>
              <p class="security-description">Manage security configurations and access controls</p>
            </div>
          </div>

          <div class="security-options">
            <div class="security-option">
              <div class="option-info">
                <h4 class="option-title">Audit Logging</h4>
                <p class="option-description">All admin actions are automatically logged</p>
              </div>
              <span class="option-status active">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Active
              </span>
            </div>

            <div class="security-option">
              <div class="option-info">
                <h4 class="option-title">Rate Limiting</h4>
                <p class="option-description">Protects against brute force and abuse</p>
              </div>
              <span class="option-status active">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Active
              </span>
            </div>

            <div class="security-option">
              <div class="option-info">
                <h4 class="option-title">CSRF Protection</h4>
                <p class="option-description">Cross-site request forgery prevention</p>
              </div>
              <span class="option-status active">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Active
              </span>
            </div>

            <div class="security-option">
              <div class="option-info">
                <h4 class="option-title">Two-Factor Authentication</h4>
                <p class="option-description">Additional account security (coming soon)</p>
              </div>
              <span class="option-status pending">
                Coming Soon
              </span>
            </div>
          </div>

          <div class="security-actions">
            <a href="/admin/analytics" class="security-link">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              View Audit Logs
            </a>
          </div>
        </div>
      </div>
    )}
  </div>
</AdminLayout>

<style>
  :root {
    --admin-black: #0A0A0A;
    --admin-card: #111111;
    --admin-cream: #F5F5F5;
    --gold: #D4AF37;
  }

  .font-display { font-family: 'Playfair Display', serif; }

  /* Tabs */
  .tabs-container {
    margin-bottom: 2rem;
  }

  .tabs-nav {
    display: flex;
    gap: 0.25rem;
    background: var(--admin-card);
    border: 1px solid rgba(212, 175, 55, 0.08);
    border-radius: 0.75rem;
    padding: 0.5rem;
  }

  .tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: rgba(245, 245, 245, 0.5);
    transition: all 0.2s ease;
  }

  .tab:hover {
    color: var(--admin-cream);
    background: rgba(212, 175, 55, 0.05);
  }

  .tab.active {
    color: var(--gold);
    background: rgba(212, 175, 55, 0.1);
  }

  /* Settings Section */
  .settings-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .settings-form {
    background: var(--admin-card);
    border: 1px solid rgba(212, 175, 55, 0.08);
    border-radius: 1rem;
    overflow: hidden;
  }

  .setting-group {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(212, 175, 55, 0.05);
  }

  .setting-group:last-of-type {
    border-bottom: none;
  }

  .setting-group.danger {
    background: rgba(239, 68, 68, 0.03);
  }

  .setting-header {
    flex: 1;
  }

  .setting-title {
    font-weight: 600;
    color: var(--admin-cream);
    margin-bottom: 0.25rem;
  }

  .setting-description {
    font-size: 0.8rem;
    color: rgba(245, 245, 245, 0.4);
  }

  .setting-control {
    flex-shrink: 0;
  }

  .setting-input {
    width: 100%;
    max-width: 400px;
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(212, 175, 55, 0.1);
    border-radius: 0.5rem;
    color: var(--admin-cream);
    font-size: 0.875rem;
  }

  .setting-input[type="number"] {
    width: 8rem;
    text-align: center;
  }

  .setting-input:focus {
    outline: none;
    border-color: rgba(212, 175, 55, 0.3);
  }

  .setting-section-header {
    padding: 1.5rem;
    background: rgba(212, 175, 55, 0.05);
    border-bottom: 2px solid rgba(212, 175, 55, 0.2);
    margin-top: 1rem;
  }

  .section-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--gold);
    margin-bottom: 0.25rem;
  }

  .section-description {
    font-size: 0.8rem;
    color: rgba(245, 245, 245, 0.4);
  }

  .setting-textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(212, 175, 55, 0.1);
